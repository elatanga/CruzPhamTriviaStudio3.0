rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- USERS ---
    // Public read to allow username existence checks (or handle via Cloud Function for better security)
    // Only 'create' allowed by anyone (registration)
    // Updates restricted to owner
    match /users/{userId} {
      allow read: if request.auth != null; 
      allow create: if true; 
      allow update, delete: if request.auth.uid == userId;
    }

    // --- SESSIONS ---
    // Only the user can read/delete their own sessions
    // Server-side logic usually handles session creation/revocation, 
    // but if client-side, must ensure userId matches.
    match /sessions/{sessionId} {
      allow read, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // --- TEMPLATES ---
    // Strict ownership. Only owner can read/write their templates.
    match /templates/{templateId} {
      allow read, write: if request.auth.uid == resource.data.ownerId;
      allow create: if request.auth.uid == request.resource.data.ownerId;
    }
  }
}